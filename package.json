{
  "name": "toggle-docstrings",
  "displayName": "Toggle Docstrings",
  "description": "A simple extension/toggle docstrings (Primarily for Python/Jupyter)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vikasdubey0551/toggle-docstrings.git"
  },
  "publisher": "Vikasdubey0551",
  "categories": [
    "Python", "Jupyter", "Docstrings", "Notebooks"
  ],
  "activationEvents": [    
    "onStartupFinished"
 ],
  "main": "./dist/extension.js",
  "contributes": {
  "menus": {
      "editor/title": [
        {
          "when": "editorIsOpen && isWorkspaceTrusted && isFileSystemResource && !isFoldActive",
          "command": "toggle-docstrings.hideDocstrings",
          "group": "navigation"
        },
        {
          "when": "editorIsOpen && isWorkspaceTrusted && isFileSystemResource && isFoldActive",
          "command": "toggle-docstrings.showDocstrings",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "toggle-docstrings.hideDocstrings",
        "title": "Toggle Docstrings: Hide Docstrings",
        "icon": "$(eye)"
      },
      {
        "command": "toggle-docstrings.showDocstrings",
        "title": "Toggle Docstrings: Show Docstrings",
        "icon": "$(eye-closed)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
